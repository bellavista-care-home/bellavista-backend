{
  "family": "bellavista-backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "",
  "taskRoleArn": "",
  "containerDefinitions": [
    {
      "name": "api",
      "image": "public.ecr.aws/placeholder/image:tag",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SECRET_KEY",
          "value": "changeme"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:postgres@db:5432/bellavista"
        },
        {
          "name": "ALLOWED_ORIGINS",
          "value": "https://your-frontend.example"
        },
        {
          "name": "MAX_CONTENT_LENGTH_MB",
          "value": "20"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/bellavista-backend",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
